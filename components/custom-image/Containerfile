ARG BASE_IMAGE=quay.io/modh/odh-generic-data-science-notebook:v2-2023a-20230322
# hadolint ignore=DL3006
FROM ${BASE_IMAGE}

# COPY Pipfile.lock /opt/app-root/bin/

USER 0

# Enable EPEL and RPM Fusion repositories and install ffmpeg
RUN dnf upgrade -y --refresh && \
    dnf install -y epel-release && \
    dnf install -y \
    https://download1.rpmfusion.org/free/el/rpmfusion-free-release-9.noarch.rpm \
    https://download1.rpmfusion.org/nonfree/el/rpmfusion-nonfree-release-9.noarch.rpm && \
    dnf install -y ffmpeg && \
    dnf clean all && \
    rm -rf /var/cache/dnf

USER 1001
